.message
  .message__upper-info
    .message__user-name
      = message.user.name
    .message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messsage__body
    - if message.body.present?
      %p.message__text
        = message.body
    = image_tag message.image.url, class: 'message__image' if message.image.present?