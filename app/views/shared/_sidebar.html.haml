.sidebar

  .header
    %p.header__user-name
      = current_user.name
    %ul.header__lists
      %li.header__list
        = link_to "/groups/new", data: {"turbolinks": false} do
          = fa_icon "edit", class: "header__icon"
      %li.header__list
        = link_to edit_user_path(current_user) do
          = fa_icon "cog", class: "header__icon"

  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group), class: "group__link", data: {"turbolinks": false} do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message